    if k not in ["predictions", "references"]:
        print(f"{k}: {v:.4f}")


print("\n--- Evaluating on Test Dataset ---")
test_metrics, test_predictions, test_references = evaluate_model(model, processor, test_dataset_, device="cuda")

print("\nTest Metrics:")
for k, v in test_metrics.items():
    if k not in ["predictions", "references"]:
        print(f"{k}: {v:.4f}")

