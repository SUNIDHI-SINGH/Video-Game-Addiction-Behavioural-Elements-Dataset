from trl import SFTTrainer

trainer = SFTTrainer(
    model=model,
    args=training_args,
    train_dataset=train_dataset_,
    eval_dataset=eval_dataset_,
    data_collator=collate_fn,
    peft_config=peft_config,
    processing_class=processor.tokenizer,

)

